<?xml version="1.0" encoding="UTF-8" ?><!DOCTYPE xml>
<propertyTemplates>
	<propertyStore id="databaseConfiguration"
		type="com.hypersocket.properties.DatabasePropertiesFileConfigurationStore">
		<filename>${hypersocket.conf}/database.properties</filename>
	</propertyStore>
	<propertyCategory resourceKey="category.authentication"
		 resourceBundle="AuthenticationService" weight="100" hidden="true">
		<property resourceKey="auth.chooseRealm" inputType="switch"
			defaultValue="true" weight="0" />
	</propertyCategory>
	<propertyCategory resourceKey="category.email"
		resourceBundle="EmailService" weight="200">
			<property resourceKey="smtp.on" inputType="switch" weight="0" defaultValue="true"/>
	</propertyCategory>
	<propertyCategory resourceKey="category.security" resourceBundle="HypersocketServer" weight="400">
		<property resourceKey="security.knownHosts" inputType="hidden" defaultValue="" weight="0"/>
	    <property resourceKey="security.enableCSRFProtection" inputType="switch" defaultValue="true" weight="0"/>
	    <property resourceKey="security.xFrameOptionsEnabled" inputType="switch" defaultValue="true" weight="100"/>
	    <property resourceKey="security.strictTransportSecurity" inputType="switch" defaultValue="true" weight="200"/>
	    <property resourceKey="security.xFrameOptionsValue" inputType="select" defaultValue="SAMEORIGIN" options="DENY,SAMEORIGIN" weight="300"/>
	</propertyCategory>
	<propertyCategory resourceKey="category.databaseSettings"
		resourceBundle="DatabaseService" weight="200">
		<property resourceKey="jdbc.vendor" inputType="select" defaultValue="MYSQL" options="MYSQL,POSTGRES,MSSQL,DERBY,H2" store="databaseConfiguration"
			allowEmpty="false" weight="100" />
		<property resourceKey="jdbc.database" inputType="text" store="databaseConfiguration"
			allowEmpty="false" weight="200" defaultValue="hypersocket" />	
		<property resourceKey="jdbc.host" inputType="text" store="databaseConfiguration" visibilityDependsOn="jdbc.vendor,jdbc.vendor"
				  visibilityDependsValue="!DERBY,!H2" allowEmpty="false" weight="300" defaultValue="localhost" />
		<property resourceKey="jdbc.port" inputType="integer" store="databaseConfiguration"  visibilityDependsOn="jdbc.vendor,jdbc.vendor"
				  visibilityDependsValue="!DERBY,!H2" allowEmpty="false" weight="400" defaultValue="3306" minValue="1" maxValue="65535"/>
		<property resourceKey="jdbc.username" inputType="text" store="databaseConfiguration"
			allowEmpty="true" weight="500" defaultValue="hypersocket" />
		<property resourceKey="jdbc.password" inputType="password" store="databaseConfiguration"
			allowEmpty="true" weight="600" defaultValue="hypersocket" />		
	</propertyCategory>
</propertyTemplates>