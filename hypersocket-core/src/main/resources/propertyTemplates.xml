<?xml version="1.0" encoding="UTF-8" ?><!DOCTYPE xml>
<propertyTemplates>
	<propertyCategory resourceKey="category.logon"
		resourceBundle="AuthenticationService" group="authentication" weight="500">
		<property resourceKey="logon.banner" inputType="textarea"
			rows="5" maxLength="8000" defaultValue="" weight="0" />
		<property resourceKey="logon.verboseErrors" inputType="switch" defaultValue="false" weight="1000" />
	</propertyCategory>
	<propertyCategory resourceKey="category.email"
		resourceBundle="EmailService" weight="600" group="messages">
		<property resourceKey="smtp.enabled" inputType="switch" weight="0" defaultValue="false" nonSystem="true"/>
		<property resourceKey="smtp.host" inputType="text" weight="50" defaultValue="localhost" visibilityDependsOn="smtp.enabled" visibilityDependsValue="true"/>
		<property resourceKey="smtp.port" inputType="integer" minValue="1" maxValue="65535" weight="100" defaultValue="25"  visibilityDependsOn="smtp.enabled" visibilityDependsValue="true"/>
		<property resourceKey="smtp.protocol" inputType="select"
			url="emails/smtpProtocols" weight="200" defaultValue="0" nameIsResourceKey="true"  visibilityDependsOn="smtp.enabled" visibilityDependsValue="true"/>
		<property resourceKey="smtp.username" inputType="text"
			weight="300" defaultValue=""  visibilityDependsOn="smtp.enabled" visibilityDependsValue="true"/>
		<property resourceKey="smtp.password" inputType="password"
			weight="400" defaultValue="" encrypted="true" visibilityDependsOn="smtp.enabled" visibilityDependsValue="true" />
		<property resourceKey="smtp.fromAddress" inputType="text"
			weight="500" defaultValue="admin@localhost.com" validateAll="email"  visibilityDependsOn="smtp.enabled" visibilityDependsValue="true"/>
		<property resourceKey="smtp.fromName" inputType="text"
			weight="600" defaultValue="Server Administrator"  visibilityDependsOn="smtp.enabled" visibilityDependsValue="true"/>
		<property resourceKey="smtp.replyAddress" inputType="text"
			weight="700" defaultValue="" validateAll="email"  visibilityDependsOn="smtp.enabled" visibilityDependsValue="true"/>
		<property resourceKey="smtp.replyName" inputType="text"
			weight="800" defaultValue=""  visibilityDependsOn="smtp.enabled" visibilityDependsValue="true"/>
		<property resourceKey="smtp.doNotSendToNoReply" inputType="switch"
			weight="1000" defaultValue="true" visibilityDependsOn="smtp.enabled" visibilityDependsValue="true"/>
		<property resourceKey="smtp.sessionTimeout" inputType="integer" weight="1100" defaultValue="60" visibilityDependsOn="smtp.enabled" visibilityDependsValue="true" minValue="30" maxValue="3600" />
	</propertyCategory>
	<propertyCategory resourceKey="category.emailConnections"
		resourceBundle="EmailService" weight="650"  group="messages">
			<property resourceKey="smtp.connectionPoolSize" inputType="integer"
						weight="0" defaultValue="1" minValue="1" maxValue="999"  visibilityDependsOn="smtp.enabled" visibilityDependsValue="true"/>
			<property resourceKey="smtp.connectionPoolMaxSize" inputType="integer"
						weight="100" defaultValue="10" minValue="1" maxValue="999"  visibilityDependsOn="smtp.enabled" visibilityDependsValue="true"/>
			<property resourceKey="smtp.connectionPoolExpiry" inputType="integer"
						weight="200" defaultValue="360" minValue="0" maxValue="99999"  visibilityDependsOn="smtp.enabled" visibilityDependsValue="true"/>
			<property resourceKey="smtp.connectionPoolWaitTime" inputType="integer"
						weight="400" defaultValue="360" minValue="0" maxValue="99999"  visibilityDependsOn="smtp.enabled" visibilityDependsValue="true"/>
	</propertyCategory>
	<propertyCategory resourceKey="category.emailExtra"
		resourceBundle="EmailService" weight="700"  group="messages">
		<property resourceKey="email.trackingImage" inputType="fileInput" weight="700" defaultValue="" publicFile="true" automaticUpload="true" showDeleteButton="true" showUploadButton="false" />
		<property resourceKey="email.archiveAddress" inputType="text" weight="800" defaultValue="" />
		<property resourceKey="email.serverName" inputType="text" weight="900" defaultValue="Hypersocket Server" />
		<property resourceKey="email.externalHostname" inputType="text" weight="1000" defaultValue="localhost" />
		<property resourceKey="email.blocked" inputType="multipleTextInput" weight="1100" defaultValue="" />
	</propertyCategory>
	<propertyCategory resourceKey="category.localization"
		resourceBundle="I18NService" weight="800" group="sessions">
		<property resourceKey="user.locales" inputType="switch"
			defaultValue="true" weight="0" />
		<property resourceKey="current.locale" inputType="select"
			url="i18n/locales" defaultValue="en" weight="100" nameIsResourceKey="false"/>
		<property resourceKey="realm.defaultTimezone" inputType="select" url="server/timezones" 
					emptySelectionAllowed="true" emptySelectionTextDefaultValue="" weight="400"/>
	</propertyCategory>
	<propertyCategory resourceKey="category.sessions"
		resourceBundle="SessionService" weight="900" group="sessions">
		<property resourceKey="session.timeout" inputType="slider"
			min="1" max="1440" defaultValue="15" weight="0" labelResourceKey="session.timeout.slider.label" />
		<property resourceKey="session.closeOnShutdown" inputType="switch"
			defaultValue="false" weight="100" />
		<property resourceKey="session.altHomePage" inputType="text"
			defaultValue="" weight="300" />
		<property resourceKey="session.altHomePage.onSchemes" inputType="multipleSelect"
		    	url="authentication/schemes" defaultValue="basic" 
		    	nameAttr="resourceKey"
		    	nameIsResourceKey="true"
		    	valueAttr="resourceKey"
		    	resourceKeyTemplate="{0}.label"
		    	weight="400"/>
	</propertyCategory>
	<propertyCategory resourceKey="realm.userProfiles"
		resourceBundle="RealmService" weight="999999" group="userProfiles">
		<property resourceKey="realm.userEditableProperties" inputType="multipleSelect" 
			includedLabelResourceKey="text.editable" excludedLabelResourceKey="text.notEditable"
		    url="currentRealm/user/editableNames" valuesIsObjectList="false" nameIsResourceKey="true" weight="100"/>
		<property resourceKey="realm.userVisibleProperties" inputType="multipleSelect" 
			includedLabelResourceKey="text.visible" excludedLabelResourceKey="text.notVisible"
		    url="currentRealm/user/visibleNames" valuesIsObjectList="false" nameIsResourceKey="true" weight="200"/>
	</propertyCategory>
	<propertyCategory resourceKey="category.features"
		 resourceBundle="PermissionService" weight="200" hidden="true">
		<property resourceKey="feature.roleSelection" inputType="switch" defaultValue="false" weight="0" hidden="true"/>
	</propertyCategory>
	<propertyCategory resourceKey="category.security"
		 resourceBundle="RealmService" weight="500" group="authentication">
		<property resourceKey="password.encoding" inputType="select"
		    		url="enum/com.hypersocket.auth.PasswordEncryptionType/"
						defaultValue="PBKDF2_SHA256_50000" weight="0" nameAttr="name" valueAttr="name"/>	
	</propertyCategory>
	<propertyCategory resourceKey="category.cors"
		 resourceBundle="PermissionService" weight="999999" group="sessions">
		<property resourceKey="cors.enabled" inputType="switch"
		    	defaultValue="false" weight="0" />	
		<property resourceKey="cors.origins" inputType="multipleTextInput"
		    	defaultValue="" weight="100" />	
	</propertyCategory>
</propertyTemplates>

		